<script type="text/ng-template" id="/createMenu.html">

    <form ng-submit="vm.addMenu()">
        <ol class="breadcrumb">
            <li><a href="/#/admin/restaurants">Resto's</a></li>
            <li>{{vm.restaurant.name}}</li>
            <li><a href="/#/admin/restaurants/{{vm.restaurant._id}}/menus">Menu's</a></li>
            <li class="active">Nieuwe menu</li>
        </ol>

        <% include ../../../partials/alert.ejs %>

        <div class="titleflex">
            <div class="titleflexattr">
                <h1>{{vm.title}} <small class="">Menu</small> </h1>
            </div>
            <div class="titleflexattr">
                <p class="titleadd">
                    <a href="/#/admin/restaurants/{{vm.restaurant._id}}/menus" class="btn btn-default">Terug</a>
                    <button type="submit" class="btn btn-primary btn-latest">Voeg menu toe</button>
                </p>
            </div>
        </div>

        <div class="row form-edit">
            <div class="col-sm-8">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Soort gerecht</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="title" ng-model="vm.title" placeholder="Soep" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="product" class="col-sm-2 control-label">Beschrijving</label>
                        <div class="col-sm-10">
                            <select ng-init="vm.product = vm.product || vm.products[0]" ng-options="product as product.description for product in vm.products | orderBy: 'description'" ng-model="vm.product" id="product" class="form-control" required>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="price" class="col-sm-2 control-label">Prijs</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="price" ng-model="vm.price" placeholder="Prijs" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="date" class="col-sm-2 control-label">Datum</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" id="date" ng-model="vm.availableAt" required>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>

</script>
