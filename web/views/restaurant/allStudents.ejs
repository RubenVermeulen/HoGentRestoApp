<script type="text/ng-template" id="/restaurantsStudents.html">

        <ol class="breadcrumb">
            <li class="active">Resto's</li>
        </ol>

        <div class="titleflex">
            <div class="titleflexattr">
                <h1>{{vm.restaurants.length}} Resto<span ng-show="vm.restaurants.length !== 1">'s</span></h1>
            </div>
