                            <div class="row"> -->
                                <div class="col-sm-6">
                                    <h4><span class="glyphicon glyphicon-map-marker" style="padding-right: 5px; font-size: 0.875em;"></span> Adres</h4>
                                    <p>{{ restaurant.address }}</p>
                                </div>
