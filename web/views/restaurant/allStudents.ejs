                        <div class="col-xs-12">
                            <div class="restaurant-cover" style="background-image: url('{{restaurant.urlImage}}')"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            <h3 class="margin-bottom-0">{{ restaurant.name }}</h3>
                        </div>
                        <div class="col-sm-4 text-right">
                            <a href="/#/restaurants/{{restaurant._id}}/menus" class="btn btn-primary" style="margin-top: 15px;">Menu's</a>
                        </div>
                    </div>

                    <div class="row">
                        <hr>
                    </div>

                    <div class="row">
