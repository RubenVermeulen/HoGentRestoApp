<script type="text/ng-template" id="/createRestaurant.html">

    <form ng-submit="vm.addRestaurant()">
        <ol class="breadcrumb">
            <li><a href="/#/home">Resto's</a></li>
            <li class="active">Nieuwe Resto</li>
        </ol>

            <% include ../partials/alert.ejs %>

        <div class="titleflex">
            <div class="titleflexattr">
                <h1>{{vm.name}} <small class="">Details</small> </h1>
            </div>
            <div class="titleflexattr">
                <p class="titleadd">
                    <a href="/#/Home" class="btn btn-default">Terug</a>
                    <button type="submit" class="btn btn-primary btn-latest">Voeg resto toe</button>
                </p>
            </div>
        </div>

        <div class="row form-edit">
            <div class="col-sm-8">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="naam" class="col-sm-2 control-label">Naam</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="naam" ng-model="vm.name" placeholder="Naam" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address" class="col-sm-2 control-label">Adres</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="address" ng-model="vm.address" placeholder="Adres" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="hours" class="col-sm-2 control-label">Openingsuren</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="hours" ng-model="vm.openingHours" placeholder="Openingsuren" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lat" class="col-sm-2 control-label">Lat</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lat" ng-model="vm.lat" placeholder="Lat">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="long" class="col-sm-2 control-label">Lng</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="long" ng-model="vm.long" placeholder="Long">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="img" class="col-sm-2 control-label">Afbeelding</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="img" ng-model="vm.urlImage" placeholder="Afbeeldingsurl">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <img class="center-block img-responsive" src="{{vm.urlImage}}"/>
            </div>
        </div>
    </form>

</script>
