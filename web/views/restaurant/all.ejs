<script type="text/ng-template" id="/home.html">
    <div ng-show="vm.isLoggedIn()">
        <ol class="breadcrumb">
            <li class="active">Resto's</li>
        </ol>

        <div ng-show="vm.alertmessage" class="alert alert-{{vm.alerttype}}" role="alert">
            {{vm.alertmessage}}
        </div>

        <div class="titleflex">
            <div class="titleflexattr">
                <h1>{{vm.restaurants.length}} Resto's</h1>
            </div>
            <div class="titleflexattr">
                <p class="titleadd"><a href="/#/restaurants/create" class="btn btn-primary">Voeg resto toe</a></p>
            </div>
        </div>


        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Naam</th>
                    <th>Adres</th>
                    <th>Openingsuren</th>
                    <th>Maaltijden</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="restaurant in vm.restaurants | orderBy: '-name'">
                    <td><a href="#/restaurants/{{restaurant._id}}">{{restaurant.name}}</td>
                    <td>{{restaurant.address}}</td>
                    <td>{{restaurant.openingHours}}</td>
                    <td><a href="#/restaurants/{{restaurant._id}}/menus">Menu's</td>
                </tr>
                </tbody>
            </table>
        </div>

    </div>
</script>